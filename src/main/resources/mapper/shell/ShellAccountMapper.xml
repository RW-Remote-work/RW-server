<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rwws.rwserver.mapper.shell.ShellAccountMapper">
    <select id="selectByEmailAndDisplayName">
        SELECT sa.*
        FROM rw.shell_account sa
        LEFT JOIN rw.user u ON sa.user_id = u.id
        <where>
            <if test="email != null">
                u.email LIKE concat('%',#{email},'%')
            </if>
            <if test="displayName != null">
                AND u.display_name LIKE concat('%',#{displayName},'%')
            </if>
        </where>
    </select>

</mapper>
