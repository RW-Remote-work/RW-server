<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1" author="Jinhan He">
        <createTable tableName="shell_account">
            <column name="id" type="bigint" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint" remarks="用户id">
                <constraints nullable="false"/>
            </column>
            <column name="total" type="int" defaultValue="0" remarks="贝克总数">
                <constraints nullable="false"/>
            </column>
            <column name="earned_amount" type="int" defaultValue="0" remarks="赚取的数量">
                <constraints nullable="false"/>
            </column>
            <column name="purchased_amount" type="int" defaultValue="0" remarks="购买的数量">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
